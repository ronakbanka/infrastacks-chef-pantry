#!/bin/bash
# spark-worker daemon
# chkconfig: 345 20 80
# description: spark-worker daemon
# processname: spark-worker

DAEMON_PATH="/opt/appliv-io-cdh4/component/spark-0.7.3/run spark.deploy.worker.Worker spark://<%= @node[:appliv_io_cdh4][:spark][:master] %>:7077"

#DAEMON=run
#DAEMONOPTS="spark.deploy.worker.Worker spark://<%= @node[:appliv_io_cdh4][:spark][:master] %>:7077"

NAME=spark-worker
DESC="Spark Worker Daemon"
PIDFILE=/var/run/$NAME.pid
SCRIPTNAME=/etc/init.d/$NAME

case "$1" in
start)
	printf "%-50s" "Starting $NAME..."
	#cd $DAEMON_PATH
	#PID=`$DAEMON $DAEMONOPTS > /dev/null 2>&1 & echo $!`
    PID=`$DAEMON_PATH > /dev/null 2>&1 & echo $!`
	#echo "Saving PID" $PID " to " $PIDFILE
        if [ -z $PID ]; then
            printf "%s\n" "Fail"
        else
            echo $PID > $PIDFILE
            printf "%s\n" "Ok"
        fi
;;
status)
        printf "%-50s" "Checking $NAME..."
        if [ -f $PIDFILE ]; then
            PID=`cat $PIDFILE`
            if [ -z "`ps axf | grep ${PID} | grep -v grep`" ]; then
                printf "%s\n" "Process dead but pidfile exists"
                exit -1
            else
                echo "Service maybe running. Thanks to this awesome CentOS/Chef initd script issue!"
                #exit -1
            fi

        else
            printf "%s\n" "Service is not running"
            exit -1
        fi

        
;;
stop)
        printf "%-50s" "Stopping $NAME"
            PID=`cat $PIDFILE`
            #cd $DAEMON_PATH
        if [ -f $PIDFILE ]; then
            kill -HUP $PID
            printf "%s\n" "Ok"
            rm -f $PIDFILE
        else
            printf "%s\n" "pidfile not found"
        fi
;;

restart)
  	$0 stop
  	$0 start
;;

*)
        echo "Usage: $0 {status|start|stop|restart}"
        exit 1
esac