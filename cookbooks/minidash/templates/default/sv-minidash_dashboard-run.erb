#!/bin/bash

# http://wiki.openwrt.org/doc/howto/http.httpd

exec 2>&1
cd             <%= @options[:home_dir] %>

# default: chpst -u nobody busybox httpd -v -f -h /var/lib/minidash -p 5678
exec chpst -u <%= @options[:user] %>                   \
  busybox httpd                                        \
  -v                                                   \
  -f                                                   \
  -h "<%= @options[:home_dir] %>"                      \
  -p <%= node[:minidash][:port] %>
