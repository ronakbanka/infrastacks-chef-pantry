#!/bin/sh

# Force all stderr to stdout
exec 2>&1

if [ -f "<%= node[:impala][:conf_dir] %>/impala-env.sh" ] ; then
  . "<%= node[:impala][:conf_dir] %>/impala-env.sh"
fi

SLEEP_TIME=5
PROC_NAME="statestored"

DAEMON="statestored"
DESC="Impala State Store Server"
EXEC_PATH="/usr/bin/statestored"
SVC_USER="impala"
DAEMON_FLAGS="${IMPALA_STATE_STORE_ARGS}"
CONF_DIR="/etc/impala/conf"
PIDFILE="/var/run/impala/statestored-impala.pid"


ulimit -H -n 65535
ulimit -S -n 65535
chpst -u <%= node[:impala][:user] %> bash -c 'ulimit -S -a'

cd "$RUNDIR"

exec chpst -u <%= node[:impala][:user] %> $EXEC_PATH $DAEMON_FLAGS
